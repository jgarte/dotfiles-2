[user]
	name = Peter Klein
	email = kleinpa00@gmail.com
[core]
	editor = $GIT_EDITOR
	excludesfile = ~/.gitignore.global
	pager = less
[color]
	ui = true
[color "branch"]
       current = blue bold
       local = green bold
       remote = red
       upstream = black white ul
       plain = red green
[color "diff"]
       meta = yellow bold
       frag = magenta bold
       old = red bold
       new = green bold
[color "status"]
       added = yellow
       #changed = green
       untracked = cyan
       deleted = red
       branch = blue
[alias]
	a = add
	ai = add --interactive
	st = status
	c = commit
	b = branch -vv
	co = checkout
	wd = diff --word-diff="color"
	lg = log
	lgg = log --graph --decorate --pretty=oneline --abbrev-commit --all
	p = push
	ac = !git add -A && git commit
	pr = pull --rebase
	woops = commit --amend --no-edit
	g = grep --break --heading --line-number
    	fresh = !git clean -fxd && git checkout -- .
	ignored = !git ls-files -v | sed -n 's/^[[:lower:]] //p'
	ignore = update-index --assume-unchanged
	unignore = update-index --no-assume-unchanged
	unignore-all = !git ignored | xargs git unignore
	pk = cherry-pick
	cfxd = "!git clean -fxdq; git submodule update --init --force --recursive; git submodule foreach --recursive 'git clean -fxd'"
	spell = "!f() { while [[ $(git rev-parse --short HEAD) != "$1*" ]]; do git commit --amend --no-edit; done; }; f"
[push]
	default = upstream
[grep]
    extendRegexp = true
    lineNumber = true
