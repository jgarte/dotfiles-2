[user]
	name = Peter Klein
	email = peter@uytr.org
[core]
	editor = emacs
	excludesfile = ~/.gitignore.global
	pager = most
[color]
	ui = true
[color "branch"]
       current = blue bold
       local = green bold
       remote = red
       upstream = black white ul
       plain = red green
[color "diff"]
       meta = yellow bold
       frag = magenta bold
       old = red bold
       new = green bold
[color "status"]
       added = yellow
       #changed = green
       untracked = cyan
       deleted = red
       branch = blue
[diff]
	tool = diffmerge
[difftool "diffmerge"]
	cmd = sgdm_cygwin.sh /p1=\"$LOCAL\" /p2=\"$REMOTE\"
[merge]
	tool = diffmerge
[mergetool "diffmerge"]
	cmd = sgdm_cygwin.sh /merge /result=\"$MERGED\" /p1=\"$LOCAL\" /p2=\"$BASE\" /p3=\"$REMOTE\"
[alias]
	a = add
	ai = add --interactive
	st = status
	c = commit
	b = branch -vv
	co = checkout
	df = difftool --dir-diff
	wd = diff --word-diff="color"
	lg = log
	lgg = log --graph --decorate --pretty=oneline --abbrev-commit --all
	ph = push origin HEAD
	fn = diff-tree --no-commit-id --name-only -r
	ac = !git add -A && git commit
	pr = pull --rebase
	hub-url = !git config remote.origin.url | sed -e 's/git@\\(.*\\?\\):\\(.*\\?\\).git/http:\\/\\/\\1\\/\\2/' | sed -e 's/\\.git//'
	hub = "!f(){ if [[ $1 ]]; then cygstart `git hub-url`/commit/`git rev-parse $1`; else cygstart `git hub-url`; fi; }; f"
	ignored = !git ls-files -v | sed -n 's/^[[:lower:]] //p'
	ignore = update-index --assume-unchanged
	unignore = update-index --no-assume-unchanged
	unignore-all = !git ignored | xargs git unignore
	woops = commit --amend --no-edit
[push]
	default = upstream
